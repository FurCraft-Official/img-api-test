{
  "name": "furapi",
  "compatibility_date": "2025-07-31",

  "platform": "cloudflare-pages",

  "r2_buckets": [
    {
      "binding": "IMAGES",
      "bucket_name": "images",
      "preview_bucket_name": "images"
    }
  ],

  "build": {
    "upload": "./public"
  },

  // 你可以针对测试环境写 env 配置，比如：
  "env": {
    "development": {
      "route": "",          // 本地开发无 route
      "workers_dev": true,  // 启用 workers_dev 子域名
      "build": {
        "upload": "./public"
      }
    }
  }
}
